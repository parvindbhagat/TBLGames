<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Bootstrap 5.3 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
     <style>
      body {
        margin: 0;
        padding: 0;
        height: 100vh;
        color: white;
        /* padding-top: 60px; Adjust for navbar height */
        background-image: url("/images/adminHome.jpg");
        /* image path */
        background-size: cover;
        /* Ensures the image covers the entire background */
        background-position: center;
        /* Centers the image */
        background-repeat: no-repeat;
        /* Prevents the image from repeating */
        background-attachment: fixed;
        /* Keeps
       the background fixed during scroll */
      }
    </style>    
</head>
<body class="bg-light">
    <div class="logo d-flex justify-content-end">
        <img src="/images/Logo.png" alt="Chrysalis Logo" class="me-5" style="max-height: 80px; margin-top: 20px; margin-bottom: 20px;">
    </div>
    <div class="container mt-5">
        <nav class="nav justify-content-end mb-4">
            <a class="nav-link disabled text-white" href="/admin/manage-games">Manage Games</a>
            <a class="nav-link text-white" href="/admin/questionsets">Question Sets</a>
            <a class="nav-link text-white" href="/admin/users">Manage Facilitators</a>
            <a class="nav-link text-white" href="/admin/">Home</a>
            <a class="nav-link text-white" href="/logout">Logout</a>
        </nav>
    </div>
    <div class="container mt-4 p-4 bg-white rounded shadow-sm">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-black"><%= title %></h1>
            <!-- This button links to a page you will need to create for adding a new user -->
            <a href="/admin/users/newuser" class="btn btn-tbl">Add New User</a>
        </div>

        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Created On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (users && users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                            <td>
                                <% if (user.isActive) { %>
                                    <span class="badge bg-success">Active</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Inactive</span>
                                <% } %>
                            </td>
                            <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                            <td>
                                <div class="d-flex gap-2">
                                    <!-- Note: You will need to create a route and view for the edit page -->
                                    <a href="/admin/users/edit/<%= user.userId %>" class="btn btn-secondary btn-sm">Update</a>
                                    
                                    <!-- This form submits to a delete route. You will need to create this route. -->
                                    <form action="/admin/users/delete/<%= user.userId %>" method="POST" onsubmit="return confirm('Are you sure you want to delete user ' + <%= JSON.stringify(user.name) %> + '?')">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
    
                                    <!-- This form submits to the reset password route via JavaScript -->
                                    <form action="/admin/users/<%= user.userId %>/reset-password" method="POST" onsubmit="handleReset(event, <%= JSON.stringify(user.name) %>)">
                                        <button type="submit" class="btn btn-warning btn-sm">Reset Password</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" style="text-align: center;">No users found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script>
        async function handleReset(event, userName) {
            // Prevent the form from submitting in the traditional way
            event.preventDefault();

            const form = event.target;
            
            if (confirm(`Are you sure you want to reset the password for ${userName}?`)) {
                try {
                    const response = await fetch(form.action, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        }
                    });

                    const result = await response.json();

                    if (response.ok) {
                        // Use a prompt to show the password and make it easy to copy
                        prompt(
                            `Success! New temporary password for ${userName}. Please copy it now and share it securely.`,
                            result.temporaryPassword
                        );
                    } else {
                        alert(`Error: ${result.message || 'Could not reset password.'}`);
                    }
                } catch (error) {
                    console.error('Reset password error:', error);
                    alert('An unexpected error occurred. Please check the console.');
                }
            }
        }
    </script>
</body>
</html>